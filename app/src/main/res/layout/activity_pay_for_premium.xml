<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayForPremiumActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/pay_premium"
        android:foreground="@drawable/ic_baseline_monetization_on_24"
        app:srcCompat="@drawable/ic_baseline_monetization_on_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="240dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="@string/premium_description" />

    <Button
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_payment_24"
        android:drawableLeft="@drawable/ic_baseline_payment_24"
        android:drawablePadding="8dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/pay_premium" />

</LinearLayout>